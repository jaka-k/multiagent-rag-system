{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@*": [
        "./src/*"
      ],
      "@components*": [
        "./src/components*"
      ],
      "@ui*": [
        "./src/components/ui*"
      ],
      "@containers*": [
        "./src/components/containers*"
      ],
      "@hooks*": [
        "./src/hooks*"
      ],
      "@workers*": [
        "./workers*"
      ],
      "@images*": [
        "./images"
      ],
      "@types*": [
        "./types"
      ],
      "@lib*": [
        "./src/lib*"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
